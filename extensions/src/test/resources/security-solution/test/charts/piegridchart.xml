-->	
	<chart-background type="color">#FFFFFF</chart-background>
	<plot-background type="color">#FFFFFF</plot-background>
	<!-- <orientation>horizontal</orientation> -->
	<!--  <height>550</height> -->
	<!--  <width>650</width> -->
	<!-- <is-3D>true</is-3D> -->
	<!-- <is-stacked>true</is-stacked> -->
	 <include-legend>false</include-legend>
	<color-palette>
		<color>#EE7733</color>
		<color>#9EAA36</color>
		<color>#BF0000</color>
		<color>#FCCF12</color>
		<color>#772200</color>
